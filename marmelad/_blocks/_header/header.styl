.header
	flex none

	.container
		padding-top 10px
		padding-bottom 10px

	&__content
		display flex
		justify-content space-between
		align-items center

	&__left-content
		display flex
		align-items center
		gap 50px

	&__right-content
		display flex
		align-items center
		gap 40px

@media (min-width: $mq.lg)
	.header
		.container
			padding-top 19px
			padding-bottom 19px

		&__left-content
			gap 77px
